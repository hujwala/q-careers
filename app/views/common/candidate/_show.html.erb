<div class="panel panel-default">
  <div class="panel-body" style="height:auto;">
    <div class="pull-left" style="width:32%;">
      <div style="background-color:grey;color:white;font-size:24px;padding:10px;">
        <%= career_interest.application_id %>
      </div>
    </div>
    <div class="pull-left ml-10" style="width:58%;">
      <%= theme_panel_heading(candidate.name) %>
      <%= theme_panel_sub_heading("#{candidate.year_of_passing} Graduate", "#") %>
    </div>
    <%= clear_tag(20) %>

    <% if career_interest.referrer %>
    <div class="alert alert-info">
      Referred by: <%= career_interest.referrer.name %>
    </div>
    <% end %>

    <table class="table table-condensed table-hover table-striped mt-20">
      <tbody>
        <% ["email", "phone", "current_city", "native_city",  "year_of_passing", "experience_in_years"].each do |attribute| %>
          <tr class="text-color-gray">
            <td class="bold"><%= attribute.split("_").map{|x| x.capitalize}.join(" ") %></td>
            <td><%= candidate.send(attribute) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= clear_tag(20) %>

    <%= link_to("Download CV", download_link, class: "btn btn-primary btn-xs pull-left", target: "_blank") if candidate.resume.present? && defined?(download_link) && download_link  %>
    <%= theme_edit_button(edit_link) if defined?(edit_link) && edit_link %>
    <%= theme_delete_button(delete_link) if defined?(delete_link) && delete_link %>
    <%= clear_tag(10) %>

  </div>
</div>

<%= theme_more_widget(career_interest.candidate,
          heading: "Candidate Details",
          data_columns: [:id, :created_at, :updated_at],
          super_admin: true) %>

<%= theme_more_widget(career_interest,
          heading: "Career Interest Details",
          data_columns: [:id, :confirmed, :confirmed_at, :reported, :reported_at, :created_at, :updated_at],
          super_admin: true) %>



